@model InstemDb.Services.Models.Info.MovieInfoResponseModel
@{
    ViewData["Title"] = "Movie Info";
}

<div class="row justify-content-between">
    <div class="col-8">
        <h2>@Model.Title</h2>
    </div>
    <div class="col-4">
        <span class="ipc-poster-card__rating-star-group float-right">
            <span class="ipc-rating-star ipc-rating-star--baseAlt ipc-rating-star">
                <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" class="ipc-icon ipc-icon--star-inline" viewBox="0 0 24 24" fill="currentColor" role="presentation" style="margin-top: -10px;">
                    <path d="M12 20.1l5.82 3.682c1.066.675 2.37-.322 2.09-1.584l-1.543-6.926 5.146-4.667c.94-.85.435-2.465-.799-2.567l-6.773-.602L13.29.89a1.38 1.38 0 0 0-2.581 0l-2.65 6.53-6.774.602C.052 8.126-.453 9.74.486 10.59l5.147 4.666-1.542 6.926c-.28 1.262 1.023 2.26 2.09 1.585L12 20.099z"></path>
                </svg>
                <span style="padding: 5px; font-size: x-large;">@Model.Rating / 10</span>
            </span>
        </span>
    </div>
</div>
<div class="row">
    <div class="col-12">
        @Model.RunningTimeSecs h |
    @{
        var genres = " ";

        foreach (var genre in Model.Genres)
        {
            genres += genre + ", ";
        }

        genres = genres.Substring(0, genres.Length - 2);
    }

    <span>&nbsp @genres</span>
    <span>&nbsp|&nbsp @(Model.ReleaseDate.Year > 1900 ? Model.ReleaseDate.ToString("dd MMMM yyyy") : "Unknown")</span>
</div>
</div>

<div class="row">
    <div class="text-right col-5">
        <img src="@Model.ImageUrl" onerror="this.onerror=null; this.src='../../img/default.jpg'" class="rounded img-fluid float-left" />
    </div>
    <div class="col-7">
        <p>@Model.Plot</p>
        @{
            var directors = " ";

            foreach (var director in Model.Directors)
            {
                directors += director + ", ";
            }

            directors = directors.Substring(0, directors.Length - 2);

            if (Model.Directors.Count > 1)
            {
                <p>
                    <strong>Directors: </strong>@directors
                </p>
            }
            else
            {
                <p>
                    <strong>Director: </strong>@directors
                </p>
            }

            var actors = " ";
            foreach (var actor in Model.Actors)
            {
                actors += actor + ", ";
            }

            actors = actors.Substring(0, actors.Length - 2);

            if (Model.Actors.Count > 1)
            {
                <p>
                    <strong>Stars: </strong>@actors
                </p>
            }
            else
            {
                <p>
                    <strong>Star: </strong>@actors
                </p>
            }

        }
    </div>
</div>



